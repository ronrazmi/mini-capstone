<h2> Please Enter Your Product Below </h2>

<%= form_tag 'productinput', method: :post do %>
	<%= label_tag :name %>
	<%= text_field_tag :name %>
	<p> <%= label_tag :price %> <p>
	<p> <%= text_field_tag :price %> <p>
	<p> <%= label_tag :description %> <p>
	<p> <%= text_field_tag :description %> <p>
	<p> <%= submit_tag %> <p>
	<% end %>
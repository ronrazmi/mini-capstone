<h2> Here are the products: </h2>


<% @allproducts.each_slice(3) do |three_products| %>
<div class="row">
<% three_products.each do |product| %>

< div class="col-md-4" >

<h3> <a href="/products/<%= product.id %>"><%= product.name %> </a> </h3>


<h3> Product Image: </h3>
<img src="<%= product.image %>">

<h3> Product Price: </h3>
<p> <%= product.price %> </p>

<h3> Product Description: </h3>
<p> <%= product.description %> </p>

</div>
<% end %>

</div>
<p> ************************************ </p>
	
<% end %>